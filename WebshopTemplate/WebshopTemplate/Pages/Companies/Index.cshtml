@page
@model WebshopTemplate.Pages.Companies.IndexModel

@{
    ViewData["Title"] = "Index";
Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Website)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Company) {
    <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Website)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
